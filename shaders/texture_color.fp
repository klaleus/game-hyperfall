#version 140

////////////////////////////////////////////////////////////////////////////////
// Inputs
////////////////////////////////////////////////////////////////////////////////

in vec2 var_texcoord0;
in vec4 var_color;

////////////////////////////////////////////////////////////////////////////////
// Uniforms
////////////////////////////////////////////////////////////////////////////////

uniform sampler2D texture_sampler;

////////////////////////////////////////////////////////////////////////////////
// Outputs
////////////////////////////////////////////////////////////////////////////////

out vec4 fragment_color;

////////////////////////////////////////////////////////////////////////////////
// Functions
////////////////////////////////////////////////////////////////////////////////

void main()
{
	vec4 texture_color = texture(texture_sampler, var_texcoord0);
	vec4 tint_color = texture_color * vec4(var_color.xyz * var_color.w, var_color.w);
	fragment_color = tint_color;
}